{
  "parser": "@babel/eslint-parser",
  "plugins": ["react"],
  "extends": ["@adobe/eslint-config-aio-lib-config", "prettier", "plugin:vitest-globals/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["node_modules/", "dist/"],
  "rules": {
    "jest/no-deprecated-functions": "off",
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["dotenv", "js-yaml", "wait-for-expect"]
      }
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["dotenv", "wait-for-expect", "nock", "vitest"]
      }
    ],
    "node/no-missing-import": [
      "error",
      {
        "allowModules": ["vitest"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["actions/telemetry.js", "actions/checkout-metrics.js"],
      "rules": {
        "node/no-missing-import": "off"
      }
    },
    {
      "files": ["commerce-backend-ui-1/web-src/**/*.js", "commerce-backend-ui-1/web-src/**/*.jsx"],
      "parser": "@babel/eslint-parser",
      "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
          "presets": ["@babel/preset-react"]
        },
        "ecmaVersion": 2021,
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "rules": {
        "node/no-unsupported-features/es-syntax": "off",
        "no-unused-vars": "off",
        "no-undef": "off",
        "react/jsx-uses-react": "warn",
        "react/jsx-uses-vars": "warn"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.e2e.test.js", "vitest.setup.js"],
      "rules": {
        "jsdoc/require-jsdoc": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["hooks/**/*.js"],
      "rules": {
        "node/shebang": "off"
      }
    }
  ]
}
